<div class="container">
    <form method="POST" action="/new" class="message">
        <h1>Submit a message</h1>
        <div class="text-input">
            <label for="name-input">Name:</label>
            <input type="text" name="messageUser" id="name-input">
        </div>
        <div class="text-input">
            <label for="message-input">Message:</label>
            <input type="text" name="messageText" id="message-input">
        </div>
        <div class="bottom-bar">
            <a href="/">Go back</a>
            <input type="submit" value="Submit">
        </div>
    </form>
</div>
